@model VendorModel

@{
    //page title
    ViewBag.Title = T("Admin.Vendors.EditVendorDetails").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Vendors");
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Vendors.EditVendorDetails") - @Model.Name
            <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink(T("Admin.Vendors.BackToList").Text, "List")</small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="category-enable" class="btn btn-info">
                <i class="fa fa-check"></i>
                @T("Admin.Common.Category.Enable")
            </span>
            <span id="category-disable" class="btn btn-warning">
                <i class="fa fa-close"></i>
                @T("Admin.Common.Category.Disable")
            </span>
            <span id="vendor-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
            <span id="product-enable" class="btn btn-info">
                <i class="fa fa-check"></i>
                @T("Admin.Common.Product.Enable")
            </span>
            <span id="product-disable" class="btn btn-warning">
                <i class="fa fa-close"></i>
                @T("Admin.Common.Product.Disable")
            </span>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}
@Html.DeleteConfirmation("vendor-delete")

@Html.CategoryEnableConfirmation("category-enable")

@Html.CategoryDisableConfirmation("category-disable")

@Html.ProductEnableConfirmation("product-enable")

@Html.ProductDisableConfirmation("product-disable")