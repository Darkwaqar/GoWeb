@model QueuedFcmModel
@using Nop.Admin.Models.Fcm
@using Nop.Core.Domain.Fcm
@using Nop.Services

@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.Id)

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.PriorityName)
                        </div>
                        <div class="col-md-9">
                            @Html.NopDisplayFor(model => model.PriorityName)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.From)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.From, required: true)
                            @Html.ValidationMessageFor(model => model.From)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.FromName)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.FromName)
                            @Html.ValidationMessageFor(model => model.FromName)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.DeviceId)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.DeviceId, required: true)
                            @Html.ValidationMessageFor(model => model.DeviceId)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.Title)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.Title)
                            @Html.ValidationMessageFor(model => model.Title)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.Message)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.Message)
                            @Html.ValidationMessageFor(model => model.Message)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.Icon)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.Icon)
                            @Html.ValidationMessageFor(model => model.Icon)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.Image)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.Image)
                            @Html.ValidationMessageFor(model => model.Image)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.Action)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.Action)
                            @Html.ValidationMessageFor(model => model.Action)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.AppKey)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.AppKey)
                            @Html.ValidationMessageFor(model => model.AppKey)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.Package)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.Package)
                            @Html.ValidationMessageFor(model => model.Package)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.GotoLink)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.GotoLink)
                            @Html.ValidationMessageFor(model => model.GotoLink)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.Intent)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.Intent)
                            @Html.ValidationMessageFor(model => model.Intent)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.FcmType)
                        </div>
                        <div class="col-md-9">
                            @Html.NopDropDownListFor(model => model.FcmType, ((FcmType)Model.FcmType).ToSelectList())
                            @Html.ValidationMessageFor(model => model.FcmType)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.FcmApplicationType)
                        </div>
                        <div class="col-md-9">
                            @Html.NopDropDownListFor(model => model.FcmApplicationType, ((FcmApplicationType)Model.FcmApplicationType).ToSelectList())
                            @Html.ValidationMessageFor(model => model.FcmApplicationType)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.CreatedOn)
                        </div>
                        <div class="col-md-9">
                            @Html.NopDisplayFor(model => model.CreatedOn)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.SendImmediately)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.SendImmediately)
                            @Html.ValidationMessageFor(model => model.SendImmediately)
                        </div>
                    </div>
                    <div class="form-group" id="pnl-send-date">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.DontSendBeforeDate)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.DontSendBeforeDate)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.SentTries)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.SentTries)
                            @Html.ValidationMessageFor(model => model.SentTries)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.SentOn)
                        </div>
                        <div class="col-md-9">
                            @if (Model.SentOn.HasValue)
                            {
                                @Html.NopDisplayFor(model => model.SentOn)
                            }
                            else
                            {
                                <div class="form-text-row">@T("Admin.System.QueuedEmails.Fields.SentOn.NotSent")</div>
                            }
                        </div>
                    </div>
                </div>

                <script type="text/javascript">
                    $(document).ready(function () {
                        $("#@Html.FieldIdFor(model => model.SendImmediately)").click(sendImmediately);
                        sendImmediately();
                    });

                    function sendImmediately() {
                        if ($('#@Html.FieldIdFor(model => model.SendImmediately)').is(':checked'))
                            $('#pnl-send-date').hide();
                        else
                            $('#pnl-send-date').show();
                    }
                </script>
            </div>
        </div>
    </div>
</div>