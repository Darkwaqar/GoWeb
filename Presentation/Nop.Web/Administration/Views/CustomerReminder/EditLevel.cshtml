@model CustomerReminderModel.ReminderLevelModel

@{
    //page title
    ViewBag.Title = T("Admin.Customers.CustomerReminder.EditLevel").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Customer Reminder");
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "customer-reminder-level-form" }))
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Customers.CustomerReminder.EditLevel") - @Model.Name
            <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink("(" + T("Admin.Customers.CustomerReminder.BackToAction") + ")", "Edit", new { Id = Model.CustomerReminderId })</small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdateLevel", Model)
}
