@model FcmStatisticsModel
@using Nop.Admin.Models.Fcm
@using Nop.Core
@using Nop.Services.Common

@{
    const string panelId = "nopcommerce-fcm-statistics-box";
    const string hidePanelAttributeName = "HideFcmStatisticsPanel";
    var hidePanel = EngineContext.Current.Resolve<IWorkContext>().CurrentCustomer.GetAttribute<bool>(hidePanelAttributeName);
}

<div class="box box-info @if(hidePanel){<text>collapsed-box</text>}" id="@panelId">
    <div class="box-header with-border clearfix">
        <div class="box-title">
            <i class="fa ion-stats-bars"></i>
            @T("Admin.Dashboard.Fcm.Statistics")
        </div>
        <div class="box-tools pull-right">
            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                @if (hidePanel)
                {
                    <text><i class="fa fa-plus"></i></text>
                }
                else
                {
                    <text><i class="fa fa-minus"></i></text>
                }
            </button>
        </div>
    </div>
    <div class="box-body">
        <div class="col-lg-3 col-xs-6">
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>@Model.NumberOfDevices</h3>
                    <p>@T("Admin.Dashboard.NumberOfDevices")</p>
                </div>
                <div class="icon">
                    <i class="ion-ios-monitor-outline"></i>
                </div>
                <a href="@Url.Action("FcmDeviceList", "Fcm")" class="small-box-footer">
                    @T("Admin.Dashboard.MoreInfo")
                    <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>@Model.NumberOfAndroidDevices</h3>
                    <p>@T("Admin.Dashboard.NumberOfAndroidDevices")</p>
                </div>
                <div class="icon">
                    <i class="ion-android-phone-portrait"></i>
                </div>
                <a href="@Url.Action("FcmDeviceList", "Fcm")" class="small-box-footer">
                    @T("Admin.Dashboard.MoreInfo")
                    <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>@Model.NumberOfIosDevices</h3>
                    <p>@T("Admin.Dashboard.NumberOfIosDevices")</p>
                </div>
                <div class="icon">
                    <i class="ion-iphone"></i>
                </div>
                <a href="@Url.Action("FcmDeviceList", "Fcm")" class="small-box-footer">
                    @T("Admin.Dashboard.MoreInfo")
                    <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>
        <div class="col-lg-3 col-xs-6">
            <div class="small-box bg-red">
                <div class="inner">
                    <h3>@Model.NumberOfWebDevices</h3>
                    <p>@T("Admin.Dashboard.NumberOfWebDevices")</p>
                </div>
                <div class="icon">
                    <i class="ion-laptop"></i>
                </div>
                <a href="@Url.Action("FcmDeviceList", "Fcm")" class="small-box-footer">
                    @T("Admin.Dashboard.MoreInfo")
                    <i class="fa fa-arrow-circle-right"></i>
                </a>
            </div>
        </div>

        <script>
            $(document).ready(function () {
                $('#@panelId').on('click', 'button[data-widget="collapse"]', function () {
                    var collapsed = !$('#@panelId').hasClass('collapsed-box');
                    saveUserPreferences('@(Url.Action("SavePreference", "Preferences"))', '@hidePanelAttributeName', collapsed);
                });
            });
        </script>
    </div>
</div>