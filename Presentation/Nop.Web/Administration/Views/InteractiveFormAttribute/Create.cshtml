@model InteractiveFormAttributeModel

@{
    //page title
    ViewBag.Title = T("Admin.Promotions.InteractiveForms.AddAttribute").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("InteractiveForms");
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "interactive-formattribute-form" }))
{
    @Html.AntiForgeryToken()
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Promotions.InteractiveForms.AddAttribute")
            <small><i class="fa fa-arrow-circle-left"></i>@Html.ActionLink("(" + T("Admin.Promotions.InteractiveForms.BackToForm") + ")","Edit","InteractiveForm",new { id = Model.InteractiveFormId },null)</small>
        </h1>
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}