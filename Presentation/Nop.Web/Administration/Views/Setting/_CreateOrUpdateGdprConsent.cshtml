@model GdprConsentModel

@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)

<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    @(Html.LocalizedEditor<GdprConsentModel, GdprConsentLocalizedModel>("gdpr-consent-localized",
                    @<div>
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.NopLabelFor(model => model.Locales[item].Message)
                            </div>
                            <div class="col-md-9">
                                @Html.NopEditorFor(model => model.Locales[item].Message, required: true)
                                @Html.ValidationMessageFor(model => model.Locales[item].Message)
                            </div>
                        </div>
                        @Html.HiddenFor(model => model.Locales[item].LanguageId)
                    </div>
                        ,
                    @<div>
                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.NopLabelFor(model => model.Message)
                            </div>
                            <div class="col-md-9">
                                @Html.NopEditorFor(model => model.Message, required: true)
                                @Html.ValidationMessageFor(model => model.Message)
                            </div>
                        </div>
                    </div>
                       ))
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.IsRequired)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.IsRequired)
                            @Html.ValidationMessageFor(model => model.IsRequired)
                        </div>
                    </div>
                    @if (Model.Locales.Count == 1)
                    {
                        <div class="form-group" id="pnlRequiredMessage">
                            <div class="col-md-3">
                                @Html.NopLabelFor(model => model.RequiredMessage)
                            </div>
                            <div class="col-md-9">
                                @Html.NopEditorFor(model => model.RequiredMessage, required: true)
                                @Html.ValidationMessageFor(model => model.RequiredMessage)
                            </div>
                        </div>
                    }
                    else
                    {
                        @(Html.LocalizedEditor<GdprConsentModel, GdprConsentLocalizedModel>("gdpr-consent-required-localized",
                            @<div>
                                <div class="form-group" id="pnlRequiredMessage">
                                    <div class="col-md-3">
                                        @Html.NopLabelFor(model => model.Locales[item].RequiredMessage)
                                    </div>
                                    <div class="col-md-9">
                                        @Html.NopEditorFor(model => model.Locales[item].RequiredMessage, required: true)
                                        @Html.ValidationMessageFor(model => model.Locales[item].RequiredMessage)
                                    </div>
                                </div>
                                @Html.HiddenFor(model => model.Locales[item].LanguageId)
                            </div>
                                ,
                            @<div>
                                <div class="form-group">
                                    <div class="col-md-3">
                                        @Html.NopLabelFor(model => model.RequiredMessage)
                                    </div>
                                    <div class="col-md-9">
                                        @Html.NopEditorFor(model => model.RequiredMessage, required: true)
                                        @Html.ValidationMessageFor(model => model.RequiredMessage)
                                    </div>
                                </div>
                            </div>
                            ))

                    }
                    <script>
                        $(document).ready(function () {
                            $("#@Html.IdFor(model => model.IsRequired)").click(toggleIsRequired);
                            toggleIsRequired();
                        });
                        function toggleIsRequired() {
                            if ($('#@Html.IdFor(model => model.IsRequired)').is(':checked')) {
                                $('#pnlRequiredMessage').show();
                            } else {
                                $('#pnlRequiredMessage').hide();
                            }
                        }
                    </script>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.DisplayDuringRegistration)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.DisplayDuringRegistration)
                            @Html.ValidationMessageFor(model => model.DisplayDuringRegistration)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.DisplayOnCustomerInfoPage)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.DisplayOnCustomerInfoPage)
                            @Html.ValidationMessageFor(model => model.DisplayOnCustomerInfoPage)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.NopLabelFor(model => model.DisplayOrder)
                        </div>
                        <div class="col-md-9">
                            @Html.NopEditorFor(model => model.DisplayOrder)
                            @Html.ValidationMessageFor(model => model.DisplayOrder)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>