@model ProductModel

@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)


<script>
    $(document).ready(function () {
        bindBootstrapTabSelectEvent('product-edit');
    });
</script>

<div class="content">
    <div class="form-horizontal">
        <div id="product-edit" class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                @Html.RenderBootstrapTabHeader("tab-info", @T("Admin.Catalog.Products.Pictures"), true)
                
               
            </ul>
            <div class="tab-content">
                @Html.RenderBootstrapTabContent("tab-info", @TabInfo(), true)
            </div>
        </div>
    </div>
</div>

@helper TabInfo()
{
    @Html.Partial("_CreateOrUpdate.Pictures", Model)
}