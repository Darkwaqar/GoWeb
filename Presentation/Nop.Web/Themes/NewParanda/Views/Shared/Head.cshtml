@using Nop.Core;
@using Nop.Core.Infrastructure
@using Nop.Web.Framework.Themes
@using Nop.Web.Framework.UI
@{
    var supportRtl = EngineContext.Current.Resolve<IWorkContext>().WorkingLanguage.Rtl;
    var themeName = EngineContext.Current.Resolve<IThemeContext>().WorkingThemeName;

    //add browser specific CSS files
    var browser = Request.Browser;
    if (browser.Browser == "IE" && browser.MajorVersion == 8)
    {
        Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/ie8.css", themeName));
    }
    //add main CSS file
    if (supportRtl)
    {
        //Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/styles.rtl.css", themeName));
    }
    else
    {
        //Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/styles.css", themeName));
        //Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/vendor.css", themeName));

        Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/jquery.multiscroll.css", themeName));
        Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/main.css", themeName));
        Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/fontawesome.css", themeName));
        Html.AppendCssFileParts(string.Format("https://unpkg.com/flickity@2/dist/flickity.min.css"));




        Html.AddScriptParts(ResourceLocation.Foot, "~/Scripts/jquery.easings.min.js");
        Html.AddScriptParts(ResourceLocation.Foot, "~/Scripts/jquery.multiscroll.js");
        Html.AddScriptParts(ResourceLocation.Foot, "~/Scripts/slideout.js");
        Html.AddScriptParts(ResourceLocation.Foot, string.Format("~/Themes/{0}/Content/scripts/jquery.scrollbar.min.js", themeName));
        Html.AddScriptParts(ResourceLocation.Foot, string.Format("https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"));
        Html.AddScriptParts(ResourceLocation.Foot, string.Format("~/Themes/{0}/Content/scripts/main.js", themeName));
        Html.AddScriptParts(ResourceLocation.Foot, string.Format("https://cdnjs.cloudflare.com/ajax/libs/jquery-mousewheel/3.0.6/jquery.mousewheel.min.js"));
        Html.AddScriptParts(ResourceLocation.Foot, string.Format("~/Themes/{0}/Content/scripts/smoothscroll.js", themeName));

        
    }

