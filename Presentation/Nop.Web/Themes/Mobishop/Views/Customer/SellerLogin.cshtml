@model LoginModel
@using Nop.Web.Models.Customer;
@using Nop.Core;
@using Nop.Core.Infrastructure;
@{
    Layout = "~/Views/Shared/_BlankColumn.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.Login").Text);
    //page class
    Html.AppendPageCssClassParts("html-login-page");

    //register URL with return URL (if specified)
    var registerUrl = Url.RouteUrl("SellerRegister");
    if (!String.IsNullOrEmpty(this.Context.Request.QueryString["returnUrl"]))
    {
        var webHelper = EngineContext.Current.Resolve<IWebHelper>();
        registerUrl = webHelper.ModifyQueryString(registerUrl, "returnurl=" + HttpUtility.UrlEncode(this.Context.Request.QueryString["returnUrl"]), null);
    }
}






<div class="html-apply-vendor-page">


    <div class="row">

        <div class="col-md-12 img-bg">
            <div class="header-inner ">

                <div class="logo-placeholder">
                    <a class="home-main" href="/">
                        <span class="logo"></span>
                        <span class="moto"></span>
                    </a>


                </div>
            </div>

            <div class="row padding-20">
                <div class="col-md-8">

                    <div class="_heading_large">
                        <h1>Do More with Your GoMobishop Shop</h1>
                        <img src="~/Themes/Prisma/Content/img/seller-banner.png" alt="">
                    </div>


                </div>
                <div class="col-md-4">

                    <div class="register-form opc">


                        <div class="titlec">
                            <h1>Welcome back, Sign in</h1>

                        </div>


                        @Html.Partial("_ExternalAuthentication.AssociateMessage")
                        @Html.Partial("_ExternalAuthentication.Errors")

                        <div class="returning-wrapper fieldset">
                            @using (Html.BeginForm())
                            {
                                var validationSummary = Html.ValidationSummary(true, T("Account.Login.Unsuccessful").Text);

                                if (!MvcHtmlString.IsNullOrEmpty(validationSummary))
                                {
                                    <div class="message-error">@validationSummary</div>
                                }
                                <div class="form-fields">
                                    @if (Model.UsernamesEnabled)
                                    {
                                        <div class="input-field">
                                            @Html.LabelFor(m => m.Username, new { }, ":")
                                            @Html.TextBoxFor(m => m.Username, new { @class = "username", autofocus = "autofocus" })
                                            @Html.ValidationMessageFor(m => m.Username)
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="input-field">
                                            @Html.LabelFor(m => m.Email, new { }, ":")
                                            @Html.TextBoxFor(m => m.Email, new { @class = "email", autofocus = "autofocus" })
                                            @Html.ValidationMessageFor(m => m.Email)
                                        </div>
                                    }
                                    <div class="input-field">
                                        @Html.LabelFor(m => m.Password, new { }, ":")
                                        @Html.PasswordFor(m => m.Password, new { @class = "password" })
                                        @Html.ValidationMessageFor(m => m.Password)
                                    </div>
                                    <div class="input-check reversed">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        @Html.LabelFor(m => m.RememberMe)
                                        <span class="forgot-password" style="font-size:12px;">
                                            @Html.RouteLink(T("Account.Login.ForgotPassword").Text, "PasswordRecovery")
                                        </span>
                                    </div>
                                    @if (Model.DisplayCaptcha)
                                    {
                                        <div class="captcha-box">
                                            @Html.Raw(Html.GenerateCaptcha())
                                        </div>
                                    }


                                    <div class="buttons" style="width:100%">
                                        <input class="button-1 login-button" type="submit" value="Sign In" />
                                    </div>
                                </div>

                            }
                        </div>

                        <div class="external-authentication">
                            @Html.Action("ExternalMethods", "ExternalAuthentication")
                        </div>
                        @*@Html.Action("TopicBlock", "Topic", new { systemName = "LoginRegistrationInfo" })*@

                        <div class="login">
                            Don't have an account?  @Html.ActionLink("Register as Seller", "SellerRegister")
                        </div>

                    </div>




