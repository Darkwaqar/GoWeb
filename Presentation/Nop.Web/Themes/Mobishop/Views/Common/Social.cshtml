@using Nop.Core
@using Nop.Core.Infrastructure
@using Nop.Services.Configuration

@model Nop.Web.Models.Common.SocialModel

@{
    var storeId = EngineContext.Current.Resolve<IStoreContext>().CurrentStore.Id;
    var settingService = EngineContext.Current.Resolve<ISettingService>();
    var instagramUrl = settingService.GetSettingByKey("pavilionthemesettings.instagramurl", String.Empty, storeId, true);
    var pinterestUrl = settingService.GetSettingByKey("pavilionthemesettings.pinteresturl", String.Empty, storeId, true);
    var vimeoUrl = settingService.GetSettingByKey("pavilionthemesettings.vimeourl", String.Empty, storeId, true);
}

<ul class="social-sharing">
    @if (!String.IsNullOrEmpty(Model.FacebookLink))
    {
        <li><a target="_blank" class="facebook" href="@Model.FacebookLink"></a></li>
    }
    <li><a target="_blank" class="instagram" href="https://www.instagram.com/mobishopofficial/"></a></li>
    @if (!String.IsNullOrEmpty(Model.TwitterLink))
    {
        <li><a target="_blank" class="twitter" href="@Model.TwitterLink"></a></li>
    }

    <li><a target="_blank" class="linkedin" href="https://www.linkedin.com/company/grow-online-private-limited"></a></li>
    @*<li><a target="_blank" class="google" href="https://www.youtube.com/channel/UC2H2mOOsyBeYceJfDfpv2WQ"></a></li>*@
    <li><a target="_blank" class="youtube" href="https://www.youtube.com/channel/UCXdqqK8jhuE67iCd_Cqv5RA"></a></li>

    @if (!String.IsNullOrEmpty(pinterestUrl))
    {
        <li><a target="_blank" class="pinterest" href="@pinterestUrl"></a></li>
    }
    @if (!String.IsNullOrEmpty(vimeoUrl))
    {
        <li><a target="_blank" class="vimeo" href="@vimeoUrl"></a></li>
    }
    @if (!String.IsNullOrEmpty(instagramUrl))
    {
        <li><a target="_blank" class="instagram" href="@instagramUrl"></a></li>
    }
    @if (Model.NewsEnabled)
    {
        <li><a target="_blank" class="rss" href="@Url.RouteUrl("NewsRSS", new {languageId = Model.WorkingLanguageId})"></a></li>
    }
</ul>


<script>
    document.onscroll = function () {
        if (window.innerHeight + window.scrollY > document.body.clientHeight) {
            $(".share-fix").hide();
        }
        else {
            $(".share-fix").show();
        }
    }
</script>