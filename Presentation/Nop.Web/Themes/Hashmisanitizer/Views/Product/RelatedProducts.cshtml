@model IList<ProductOverviewModel>

@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{


    int i = 0;
    int j = 0;


    <div class="related-products-grid row">
        <div class="title">
            <strong>Same Collections</strong>
        </div>


   



        <div id="related-products" class="carousel slide" data-interval="10000" data-type="multi" data-ride="carousel">
            <div class="item-grid">
                <!-- Carousel indicators -->
                @*<ol class="carousel-indicators">

                        @foreach (var item in Model)
                        {
                            i = i + 1;
                            <li data-target="#related-products  @(i == 1 ? "active" : "") " data-slide-to="@i"></li>
                        }


                    </ol>*@
                <!-- Wrapper for carousel items -->
                <div class="carousel-inner">



                    @foreach (var item in Model)
                    {
                        j = j + 1;

                        <div class="item @( j == 1 ? "active" : "") ">
                            <div class="carousel-col">
                                <div class="item-box block">@Html.Partial("_ProductBox", item)</div>
                            </div>
                        </div>

                    }




                </div>
                <!-- Carousel controls -->
                <!-- Controls -->
                <div class="left carousel-control">
                    <a href="#related-products" role="button" class="previous" data-slide="prev">

                        <span class="sr-only">Previous</span>
                    </a>
                </div>
                <div class="right carousel-control">
                    <a href="#related-products" class="next" role="button" data-slide="next">

                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

}



<script type="text/javascript">
    $(document).ready(function () {


        $('.carousel[data-type="multi"] .item').each(function () {
            var next = $(this).next();
            if (!next.length) {
                next = $(this).siblings(':first');
            }
            next.children(':first-child').clone(true).appendTo($(this));

            for (var i = 0; i < 2; i++) {
                next = next.next();
                if (!next.length) {
                    next = $(this).siblings(':first');
                }

               next.children(':first-child').clone(true).appendTo($(this));
            }
        });


        $('.carousel-inner  .product-item').addClass('sevenspikes-ajaxcart');



    });
</script>
