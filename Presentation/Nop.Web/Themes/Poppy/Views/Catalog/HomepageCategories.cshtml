@model IList<CategoryModel>

@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="category-grid home-page-category-grid">
        <div class="item-grid">
            @foreach (var item in Model)
            {
                <div class="item-box item-box-catagory">
                    <div class="category-item">
                        <div class="picture">
                            <a class="picture-link" href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                <img class="picture-img" alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
                            </a>
                        </div>
                        <h2 class="title">
                            <a href="@Url.RouteUrl("Category", new {SeName = item.SeName})" title="@item.PictureModel.Title">
                                @item.Name
                            </a>
                           @* <span>@Html.Widget("poppy_theme_categories_products_count", item.Id) @T("SevenSpikes.Themes.Poppy.CategoryProducts.Items")</span> *@
                        </h2>
                    </div>
                </div>
            }
        </div>
    </div>
}