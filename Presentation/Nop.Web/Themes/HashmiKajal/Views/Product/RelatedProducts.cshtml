@model IList<ProductOverviewModel>
@using Nop.Web.Models.Catalog;

@{ 

   // Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/css/owl.carousel.css");

    Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/css/owl.carousel.min.css");
    Html.AddScriptParts("~/Themes/HashmiKajal/Content/scripts/owl.carousel.min.js");
}
<script src=""></script>
@if (Model.Count > 0)
{
    <div class="related-products-grid product-grid">
        <div class="title">
            <strong>@T("Products.RelatedProducts")</strong>
        </div>
        <div class="item-grid owl-carousel owl-theme">
            @foreach (var item in Model)
            {
                <div class="item-box item">@Html.Partial("_ProductBox", item)</div>
            }
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        $('.owl-carousel').owlCarousel({
            loop: false,
            margin: 10,
            nav: false,            
            responsive: {
                0: {
                    items: 1,
                    nav: true,
                    margin: 0
                },
                600: {
                    items: 3,
                    nav: true,
                    loop: true,
                },
                1024: {
                    items: 4,
                }
            }
        })
    })
</script>