@using Nop.Web.Framework;
@using Nop.Core.Infrastructure;
@using Nop.Web.Framework.UI;
@using Nop.Core;
@{
    var supportRtl = EngineContext.Current.Resolve<IWorkContext>().WorkingLanguage.Rtl;

    var browser = Request.Browser;
    var isIeEightOrLess = false;
    if (browser.Browser == "IE" && browser.MajorVersion <= 8)
    {
        isIeEightOrLess = true;
    }
    if (isIeEightOrLess)
    {
        if (supportRtl)
        {
            Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/css/ie8-fix.rtl.css");
        }
        else
        {
            Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/css/ie8-fix.css");
        }
    }
    Html.AppendCssFileParts("~/Plugins/SevenSpikes.Core/Styles/perfect-scrollbar.min.css");
    if (supportRtl)
    {
        if (browser.Browser == "Safari")
        {
            Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/CSS/safari-fix.rtl.css");
        }

        Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/CSS/980.rtl.css");
        Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/CSS/768.rtl.css");
        Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/CSS/480.rtl.css");
        Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/CSS/mobile-only.rtl.css");
        Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/CSS/tables.rtl.css");
    }
    else
    {
        Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/CSS/MyResponsive.css");

        Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/CSS/980.css");
        Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/CSS/768.css");
        Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/CSS/480.css");
        Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/CSS/mobile-only.css");
        Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/CSS/tables.css");

    }

    if (supportRtl)
    {
        Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/CSS/styles.rtl.css");
    }
    else
    {
        Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/CSS/styles.css");
    }

    Html.AddScriptParts("~/Plugins/SevenSpikes.Core/Scripts/footable.js");
    Html.AddScriptParts("~/Plugins/SevenSpikes.Core/Scripts/perfect-scrollbar.min.js");
    Html.AddScriptParts("~/Plugins/SevenSpikes.Core/Scripts/SevenSpikesExtensions.min.js");
    if (isIeEightOrLess)
    {
        Html.AddScriptParts("~/Plugins/SevenSpikes.Core/Scripts/selectivizr.min.js");
        Html.AddScriptParts("~/Plugins/SevenSpikes.Core/Scripts/respond.min.js");
    }
    Html.AddScriptParts("~/Themes/HashmiKajal/Content/scripts/tiffany.js");

    var controllerName = System.Web.HttpContext.Current.Request.RequestContext.RouteData.GetRequiredString("controller");
    var isHomePage = controllerName.Equals("home", StringComparison.InvariantCultureIgnoreCase);

    if (isHomePage)
    {
       // Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/homePage/images-compare.css");

        Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/homePage/Mystyle.css");

        Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/homePage/style.css");

        //Html.AddScriptParts("https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js");

        /*Html.AddScriptParts("https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js");

        Html.AppendCssFileParts("https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css");*/
        Html.AppendCssFileParts("https://fonts.googleapis.com/css?family=Raleway:400,900&display=swap");

        Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/css/images-compare.css");

        Html.AddScriptParts("https://cdnjs.cloudflare.com/ajax/libs/hammer.js/2.0.8/hammer.min.js");
        //images - compare
        Html.AddScriptParts("~/Themes/HashmiKajal/Content/scripts/jquery.images-compare.js");
    }
    Html.AppendCssFileParts("~/Themes/HashmiKajal/Content/homePage/footer.css");
    Html.AppendCssFileParts("https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css");

}
