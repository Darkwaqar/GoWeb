@model PasswordRecoveryModel
@using Nop.Web.Models.Customer;
@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.PasswordRecovery").Text);
}
<div class="page-header page-header-custom">
    <h3 class="text-center uppercase">@T("Account.PasswordRecovery")</h3>
</div>

    <div class="page-body" style="margin-bottom:355px">
        @if (!String.IsNullOrEmpty(Model.Result))
        {
            <div class="alert alert-success marginBottom30" role="alert">
                @Model.Result
            </div>
        }
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <p class="tooltip">@T("Account.PasswordRecovery.Tooltip")</p>
            <div class="form-horizontal">
                <div class="form-group" style="margin:0px">
                    @Html.LabelFor(model => model.Email, new { @class = "col-sm-4 control-label uppercase" }, ":")
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control uppercase" })
                        <small class="text-danger">@Html.ValidationMessageFor(model => model.Email)</small>
                    </div>
                    <div class="col-sm-1">
                        @Html.RequiredHint()
                    </div>
                </div>
            </div>
            <div class="form-group col-md-12 text-center" style="top:37px;">
                <input type="submit" name="send-email" class="btn-med" value="@T("Account.PasswordRecovery.RecoverButton")" />
            </div>
        }
    </div>

