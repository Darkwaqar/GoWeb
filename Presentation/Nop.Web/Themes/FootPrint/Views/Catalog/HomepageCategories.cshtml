@model IList<CategoryModel>
@using Nop.Web.Models.Catalog;

<div >
    @if (Model.Count > 0)
    {
        int i = 0;
        <div class="row text-center">
            @foreach (var item in Model)
            {
                int type = 6;

                if (i % 6 == 0)
                {
                    type = 8;
                }
                else if (i % 6 == 1)
                {
                    type = 4;
                }
                else if (i % 6 == 2)
                {
                    type = 4;
                }
                else if (i % 6 == 3)
                {
                    type = 8;
                }
                else if (i % 6 == 4)
                {
                    type = 4;
                }
                else if (i % 6 == 5)
                {
                    type = 4;
                }

                <div class="col-xs-12 col-sm-12 col-md-@(type) @(i % 6== 3 ? "pull-right" : "") nopadding" id="qSubCategories@(item.Id)">
                    <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })">
                        <img style="width:100%" src="@item.PictureModel.FullSizeImageUrl" />
                    </a>
                    <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" style="position:absolute;z-index:1000;right:37px;bottom:18px;font-size:47px;color:white;font-weight:normal">
                        @item.Name
                    </a>
                </div>
                i++;
            }
        </div>
    }
</div>