@model AdminHeaderLinksModel
@using Nop.Web.Models.Common;
@if (Model.IsCustomerImpersonated || Model.DisplayAdminLink)
{
    <div class="lang-wrap">
        <div class="btn-lang-alternative btn-lang-alternative-1">
            @if (Model.DisplayAdminLink)
            {
                <a href="@Url.Content("~/admin")" class="btn btn-stripe">@T("Account.Administration")</a>
            }

            @if (!String.IsNullOrEmpty(Model.EditPageUrl))
            {
                <a href="@Model.EditPageUrl" class="btn btn-stripe">@T("Common.ManagePage")</a>
            }

        </div>
        @if (!String.IsNullOrEmpty(Model.EditPageUrl))
        {
            <span href="@Model.EditPageUrl" class="btn btn-stripe">@T("Common.ManagePage")</span>
        }
    </div>
    if (Model.IsCustomerImpersonated)
    {
        <div class="lang-wrap">
            <div class="btn-lang-alternative btn-lang-alternative-1">
                <a  href="@Url.RouteUrl("Logout")" class="btn btn-stripe finish-impersonation" title="@T("Account.ImpersonatedAs.Finish.Hint")">Finish</a>
            </div>
            <span class="btn btn-stripe">@string.Format(T("Account.ImpersonatedAs").Text, Model.ImpersonatedCustomerName)</span>
        </div>
    }

}
