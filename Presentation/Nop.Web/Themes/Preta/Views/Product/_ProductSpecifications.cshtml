@model IList<ProductSpecificationModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
        if (item.SpecificationAttributeName == "Size Guide") {
            continue;
        }
            <div class="panel panel-default" style="border-radius: 0px;border: 0 !important;">
                <div class="panel-heading" role="tab" id="headingOne">
                    <h4 class="panel-title font-chronicle" style="font-size: 14px; font-weight: 700; margin-bottom: 8px;">
                        <a role="button" data-toggle="collapse" class="panel-text" data-parent="#accordion" href="#@(item.SpecificationAttributeId)" aria-expanded="true" aria-controls="(item.SpecificationAttributeId)">
                            @item.SpecificationAttributeName
                            <i class="more-less glyphicon glyphicon-plus pull-right"></i>
                        </a>
                    </h4>
                </div>
                <div id="@(item.SpecificationAttributeId)" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne" aria-expanded="true" style="">
                    <div class="panel-body">
                      @if (String.IsNullOrEmpty(item.ColorSquaresRgb))
                      {
                        @Html.Raw(item.ValueRaw)
                      }
                      else
                      {
                        <div class="attribute-squares color-squares">
                            <span class="attribute-square-container" title="@Html.Raw(item.ValueRaw)">
                                <span class="attribute-square" style="background-color: @(item.ColorSquaresRgb);">&nbsp;</span>
                            </span>
                        </div>
                      }
                    </div>
                </div>
            </div>
        }
   
}
