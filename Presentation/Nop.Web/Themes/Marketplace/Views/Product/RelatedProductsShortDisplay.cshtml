@model IList<ProductOverviewModel>
@using Nop.Web.Models.Catalog;
<div id="short-related-products" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
   

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        @{
            bool isFirstItem = true;
        }
@foreach (var item in Model)
{
    if (isFirstItem)
    {
         <div class="item active">
             <img src="@item.DefaultPictureModel.ImageUrl" >
             <div class="name">
                 @item.Name
             </div>
        </div> 
        isFirstItem = false;
    }
    else { 
     <div class="item">
         <img src="@item.DefaultPictureModel.ImageUrl">
         <div class="name">
             @item.Name
         </div>
        </div>
    }
}
      
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#short-related-products" role="button" data-slide="prev">
        <span class="fa fa-angle-left" aria-hidden="true" style="font-size:16px;padding-top:7px"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#short-related-products" role="button" data-slide="next">
        <span class="fa fa-angle-right" aria-hidden="true" style="font-size: 16px; padding-top: 7px"></span>
        <span class="sr-only">Next</span>
    </a>
</div>