@model IList<ProductOverviewModel>
@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
   
                for (int i = 0; i < Model.Count; i++)
                {
				 var product = Model[i];
                    
				<div class="col-sm-3">
				
						<img src="@product.DefaultPictureModel.ImageUrl" alt="">
                                        <p class="text-center">
                                            @product.Name<br>
                                            @product.ProductPrice.Price
                                        </p>
						
                                        
                      </div>
									
                   
                }
          
}