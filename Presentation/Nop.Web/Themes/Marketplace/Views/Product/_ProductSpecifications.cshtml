@model IList<ProductSpecificationModel>
@using Nop.Web.Models.Catalog;

@if (Model.Count > 0)
{
    <div class="panel panel-default" style="margin-top:0px">
        @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
            <div class="panel-heading" style="padding: 10px 4px; background-color: #f5f5f5;border-bottom:2px solid #fff">
                <h4 class="panel-title spec-title">
                    <a style="font-size:14px" data-toggle="collapse" href="#collapse_s@(i)">@item.SpecificationAttributeName</a>
                </h4>
            </div>
    <div id="collapse_s@(i)" class="panel-collapse collapse" style="border:1px solid #ccc;border-top:0px">
        @if (String.IsNullOrEmpty(item.ColorSquaresRgb))
        {
            @Html.Raw(item.ValueRaw)
        }
        else
        {
            <div class="color-squares">
                <span class="color-container" title="@Html.Raw(item.ValueRaw)">
                    <span class="color" style="background-color: @(item.ColorSquaresRgb);">&nbsp;</span>
                </span>
            </div>
        }
    </div>
