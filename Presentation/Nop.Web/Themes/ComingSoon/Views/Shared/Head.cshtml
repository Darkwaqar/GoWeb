@using Nop.Core;
@using Nop.Core.Infrastructure
@using Nop.Web.Framework.Themes
@using Nop.Web.Framework.UI
@{
    var supportRtl = EngineContext.Current.Resolve<IWorkContext>().WorkingLanguage.Rtl;
    var themeName = EngineContext.Current.Resolve<IThemeContext>().WorkingThemeName;


    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/vendor/jquery/jquery-3.2.1.min.js", themeName));
    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/vendor/bootstrap/js/popper.js", themeName));
    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/vendor/bootstrap/js/bootstrap.min.js", themeName));
    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/vendor/select2/select2.min.js", themeName));
    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/vendor/countdowntime/moment.min.js", themeName));
    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/vendor/countdowntime/moment-timezone.min.js", themeName));
    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/vendor/countdowntime/moment-timezone-with-data.min.js", themeName));
    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/vendor/countdowntime/countdowntime.js", themeName));
    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/vendor/tilt/tilt.jquery.min.js", themeName));
    Html.AddScriptParts(string.Format("~/Themes/{0}/Content/js/main.js", themeName));

    Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/vendor/bootstrap/css/bootstrap.min.css", themeName));
    Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/fonts/font-awesome-4.7.0/css/font-awesome.min.css", themeName));
    Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/vendor/animate/animate.css", themeName));
    Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/util.css", themeName));
    Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/vendor/select2/select2.min.css", themeName));
    Html.AppendCssFileParts(string.Format("~/Themes/{0}/Content/css/main.css", themeName));
}