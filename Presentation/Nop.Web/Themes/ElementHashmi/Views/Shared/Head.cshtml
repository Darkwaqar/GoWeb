@using Nop.Core
@using Nop.Core.Infrastructure
@using Nop.Web.Framework.UI

@{
    var supportRtl = EngineContext.Current.Resolve<IWorkContext>().WorkingLanguage.Rtl;

    var browser = Request.Browser;
    if (browser.Browser == "IE" && browser.MajorVersion == 9)
    {
        Html.AppendCssFileParts("~/Themes/ElementHashmi/Content/css/ie9-fix.css");
    }

    Html.AppendCssFileParts("~/Plugins/SevenSpikes.Core/Styles/perfect-scrollbar.min.css");

    if (supportRtl)
    {
        Html.AppendCssFileParts("~/Themes/ElementHashmi/Content/CSS/1320.rtl.css");
        Html.AppendCssFileParts("~/Themes/ElementHashmi/Content/CSS/1000.rtl.css");
        Html.AppendCssFileParts("~/Themes/ElementHashmi/Content/CSS/720.rtl.css");
        Html.AppendCssFileParts("~/Themes/ElementHashmi/Content/CSS/480.rtl.css");
        Html.AppendCssFileParts("~/Themes/ElementHashmi/Content/CSS/mobile-only.rtl.css");
        Html.AppendCssFileParts("~/Themes/ElementHashmi/Content/CSS/tables.rtl.css");
        Html.AppendCssFileParts("~/Themes/ElementHashmi/Content/CSS/styles.rtl.css");
    }
    else
    {
        Html.AppendCssFileParts("~/Themes/ElementHashmi/Content/CSS/1320.css");
        Html.AppendCssFileParts("~/Themes/ElementHashmi/Content/CSS/1000.css");
        Html.AppendCssFileParts("~/Themes/ElementHashmi/Content/CSS/720.css");
        Html.AppendCssFileParts("~/Themes/ElementHashmi/Content/CSS/480.css");
        Html.AppendCssFileParts("~/Themes/ElementHashmi/Content/CSS/mobile-only.css");
        Html.AppendCssFileParts("~/Themes/ElementHashmi/Content/CSS/tables.css");
        Html.AppendCssFileParts("~/Themes/ElementHashmi/Content/CSS/styles.css");
    }
    
    Html.AddScriptParts("~/Plugins/SevenSpikes.Core/Scripts/footable.js");
    Html.AddScriptParts("~/Plugins/SevenSpikes.Core/Scripts/perfect-scrollbar.min.js");
    Html.AddScriptParts("~/Plugins/SevenSpikes.Core/Scripts/SevenSpikesExtensions.min.js");

    Html.AddScriptParts("~/Themes/ElementHashmi/Content/scripts/element.js");
}