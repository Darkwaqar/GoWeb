@model CheckoutCompletedModel
@using Nop.Web.Models.Checkout;
@{
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.Checkout").Text);
}
    @if (!Model.OnePageCheckoutEnabled)
    {
        @Html.Action("CheckoutProgress", "Checkout", new { step = CheckoutProgressStep.Complete })
    }
    <div class="page-header page-header-custom uppercase">
        <h3 class="text-center">@T("Checkout.ThankYou")</h3>
    </div>
    <div class="page-body checkout-data minHeight250 uppercase">
        @Html.Widget("checkout_completed_top")
            <h4 class="text-center">@T("Checkout.YourOrderHasBeenSuccessfullyProcessed")</h4>
            <div class="text-center">
                <div>
                    <strong>@T("Checkout.OrderNumber"): @Model.OrderId</strong>
                </div>
                <div>
                    <a style="color:#051C3B" href="@Url.RouteUrl("OrderDetails", new { orderID = Model.OrderId })">@T("Checkout.PlacedOrderDetails")</a>
                </div>
            </div>
            <div class="text-center marginTop20" style="margin-top:30px;margin-bottom:350px">
                <input type="button" value="@T("Checkout.ThankYou.Continue")" class="btn-med" onclick="setLocation('@Url.RouteUrl("HomePage")')" />
            </div>
        @Html.Widget("checkout_completed_bottom")
    </div>