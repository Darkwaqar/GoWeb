@model IList<VendorModel>
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.Vendors").Text);
}
@using Nop.Web.Models.Catalog;
    
    <div class="page-body">
        @if (Model.Count > 0)
        {
<div class="container" style=" margin-top: 11px; ">
            @foreach (var item in Model)
            {
                <div class="col-md-6"  style="text-transform:inherit; margin-bottom: 10px;">
                    <div class="col-md-12" style="border:solid 1px; margin:2px; padding: 3px; min-height: 230px;">
                        <div class="col-md-4 col-sm-4 col-xs-4">
                            <img src="@item.PictureModel.ImageUrl" class="img-responsive" />
                        </div>
                        <div class="col-md-8 col-sm-8 col-xs-8" style="height: 175px; overflow: hidden;">
                            <h3 style="color:#000;">
                                @item.Name
                            </h3>
                            @{
                                if (!String.IsNullOrEmpty(item.Description))
                                {
                                    @Html.Raw(item.Description.Length > 200 ? item.Description.Substring(0, 200) + "..." : item.Description);
                                }
                            }                                
                        </div>
                        <div class="col-md-12">
                            <a href="@Url.RouteUrl("Vendor", new { SeName = item.SeName })" class="vendor"
                                style="float: right; border: solid 1px; padding: 10px; background-color: #eb238f; color: #fff;">
                                View Shop
                            </a>
                        </div>
                    </div>
                </div>
             }
        </div>
        }
    </div>
