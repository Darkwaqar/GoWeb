@model ProductDetailsModel
@using Nop.Web.Models.Catalog;
@{
    string theme = "/themes/bootstrapdc/";
}
<div class="container-fluid">
    <div class="row uppercase">
        <div class="col-md-12">
            <span>
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="fa fa-angle-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="fa fa-angle-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </span>
            <div style="cursor:pointer" class="pull-right">
                <img src="@theme/content/images/cross.png" height="25px"  data-dismiss="modal" />
            </div>
        </div>
    </div>
    <br />
    <div class="row ">
        <div class="col-md-4 col-sm-12 col-xs-12 nopadding">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                @*<ol class="carousel-indicators">
                    @foreach (var item in Model.PictureModels)
                {
                        <li data-target="#myCarousel" data-slide-to="0"></li>
                }

                </ol>*@

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">

                    @{
                    bool default_img = true;
                    }

                    @foreach (var item in Model.PictureModels)
                {
                    if (default_img)
                    {
                        default_img = false;
                        <div class="item active">
                            <img src="@item.FullSizeImageUrl" alt="Chania">
                        </div>
                    }
                    else
                    {
                        <div class="item">
                            <img src="@item.FullSizeImageUrl" alt="Chania">
                        </div>
                    }
                }

                </div>



            </div>


           

        </div>
        <div class="col-md-8 col-sm-12 col-xs-12 uppercase">
            <div id="ptitle"><p><b>@Model.Name</b></p></div>
            <p><b class="text-muted">Description</b></p>
            <div id="pdesc">
                @Html.Raw(Model.FullDescription)
                <div><a href="/@Model.SeName" style="color:black;font-size:16px;text-decoration:underline">View Product</a></div>
            </div>
            <br />
          
            <br />
            <div id="colors">

                @foreach (var item in Model.ProductAttributes)
                {
                    if (item.AttributeControlType.ToString().Trim().ToLower().Equals("colorsquares"))
                    {
                        foreach (var val in item.Values)
                        {
                            <span class="box" style="background-color:@val.Name"></span>
                        }
                    }

                }
            </div>


        </div>
        @*<div class="row">
            <div class="col-md-12">
                <div id="quickview-thumbs">

                    <br />
                    <div class="row no-margin">
                        @foreach (var item in Model.PictureModels)
                    {
                            <div class="col-md-3 col-sm-6 col-xs-6 ">
                                <img src="@item.FullSizeImageUrl" class="img-responsive" />
                            </div>
                    }
                    </div>


                </div>
            </div>
        </div>*@


    </div>
</div>