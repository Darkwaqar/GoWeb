@model IList<ProductOverviewModel>
@using Nop.Web.Models.Catalog;
<div id="short-related-products" class="carousel slide hidden-xs" data-ride="carousel">
    <!-- Indicators -->
    <!-- Wrapper for slides -->
    <div class="controls">
    <a href="#short-related-products" role="button" data-slide="prev">
        <span class="fa fa-angle-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a href="#short-related-products" role="button" data-slide="next">
        <span class="fa fa-angle-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    </div>
    <div class="carousel-inner" role="listbox">
        @{
            bool isFirstItem = true;
        }
        @foreach (var item in Model)
        {
            if (isFirstItem)
            {
                <div class="item active">
                    <a href="/@item.SeName">
                        <img src="@item.DefaultPictureModel.ImageUrl">
                        <div class="name">
                            @item.Name
                        </div>
                    </a>
                </div>
                isFirstItem = false;
            }
            else
            {
                <div class="item">
                    <a href="/@item.SeName">
                        <img src="@item.DefaultPictureModel.ImageUrl">
                        <div class="name">
                            @item.Name
                        </div>
                    </a>
                </div>
            }
        }

    </div>

    <!-- Left and right controls -->
    
</div>
<script>
    $('.carousel').carousel({
        interval: false
    });
</script>