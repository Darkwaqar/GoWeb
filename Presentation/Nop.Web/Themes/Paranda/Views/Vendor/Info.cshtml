@model VendorInfoModel
@using Nop.Web.Models.Customer
@using Nop.Web.Models.Vendors
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    @*Html.AddTitleParts(T("PageTitle.VendorInfo").Text);
        //page class
        Html.AppendPageCssClassParts("html-account-page");
        Html.AppendPageCssClassParts("html-vendorinfo-page");*@
}

@section left
{


    @Html.Action("CustomerNavigation", "Customer", new { selectedTabId = CustomerNavigationEnum.VendorInfo })

}
@using (Html.BeginRouteForm("CustomerVendorInfo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="page account-page vendorinfo-page">
        <div class="page-title">
            <h1>@T("Account.MyAccount") - @T("Account.VendorInfo")</h1>
        </div>
        <div class="panel-body">
            @{
    var validationSummary = Html.ValidationSummary(true);
            }
            @if (!MvcHtmlString.IsNullOrEmpty(validationSummary))
            {
                <div class="message-error">@validationSummary</div>
            }
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Name, new { }, ":")
                </div>
                <div class="col-md-9">
                    @Html.NopEditorFor(model => model.Name)
                    @Html.RequiredHint()
                    @Html.ValidationMessageFor(model => model.Name)
                </div>

            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Email, new { }, ":")
                </div>
                <div class="col-md-9">
                    @Html.NopEditorFor(model => model.Email)
                    @Html.RequiredHint()
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.NopLabelFor(model => model.Description)
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Description, "RichEditor")
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    @Html.NopLabelFor(model => model.PictureId)
                </div>
                <div class="col-md-9">
                    @Html.NopEditorFor(model => model.PictureId)
                    @Html.ValidationMessageFor(model => model.PictureId)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.Label("Cover Picture")
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.CoverPictureId)
                    @Html.ValidationMessageFor(model => model.CoverPictureId)

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    @Html.NopLabelFor(model => model.AdminComment)
                </div>
                <div class="col-md-9">
                    @Html.NopTextAreaFor(model => model.AdminComment)
                    @Html.ValidationMessageFor(model => model.AdminComment)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Url)
                </div>
                <div class="col-md-9">
                    @Html.NopEditorFor(model => model.Url)
                    @Html.ValidationMessageFor(model => model.Url)

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">

                    @Html.Label("Theme Color", new { @class = "control-label" })
                </div>
                <div class="col-md-9">
                    @Html.NopDropDownListFor(model => model.ThemeColor,
                  new List<SelectListItem> {
                       new SelectListItem { Value = "#000000" , Text = "Black" },
                       new SelectListItem { Value = "#000080" , Text = "Navy" },
                        new SelectListItem { Value = "#008000" , Text = "Green" },
                       new SelectListItem { Value = "#D3D3D3" , Text = "LightGray " },
                        new SelectListItem { Value = "#FF0000" , Text = "Red" },
                       new SelectListItem { Value = "#FFD700" , Text = "Gold" },
                        new SelectListItem { Value = "#FFFF00" , Text = "Yellow" }
                    },
                           new { @class = "form-control text-box single-line" })

                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    @Html.Label("Contact Description")
                </div>
                <div class="col-md-9">
                    @Html.NopTextAreaFor(model => model.ContactDescription)
                    @Html.ValidationMessageFor(model => model.ContactDescription)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-9">
                <input type="submit" value="@T("Common.Save")" name="Save-info-button" class="button-1 save-vendorinfo-button" />
            </div>
        </div>
    </div>
}




