@model IList<CategoryModel>

@using Nop.Web.Models.Catalog;
@if (Model.Count > 0)
{
    <div class="category-grid home-page-category-grid">
        <div class="item-grid container">
            @foreach (var item in Model)
            {
                <div class="item-box">
                    <div class="category-item">
                        <div class="picture">
                            <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                <img alt="@item.PictureModel.AlternateText" src="@item.AlternativePictureModel.ImageUrl" title="@item.PictureModel.Title" />
                                @*<img class="hover-img" alt="@item.AlternativePictureModel.AlternateText" src="@item.AlternativePictureModel.ImageUrl" title="@item.AlternativePictureModel.Title" />*@
                            </a>
                        </div>
                        <div class="detail">
                            <h2 class="title">
                                <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                    @item.Name
                                </a>
                            </h2>
                            <div class="discription">
                                @Html.Raw(item.Description)
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}