<style>
    .filterpanel {
        height: 100%;
        width: 0;
        position: fixed;
        z-index: 1001;
        top: 0;
        left: -250px;
        background-color: #111;
        overflow-x: hidden;
        transition: 0.5s;
        padding: 80px 30px 0 30px;
        width: 20%
    }

    .filterpanel a {
        padding: 8px 8px 8px 32px;
        text-decoration: none;
        font-size: 25px;
        color: #818181;
        display: block;
        transition: 0.3s;
    }

    .filterpanel a:hover {
        color: #f1f1f1;
    }

    .filterpanel .closebtnFilter {
        position: absolute;
        top: 0;
        right: 25px;
        font-size: 36px;
        margin-left: 50px;
    }


</style>


<script>
    $(document).ready(function () {
        $(".filter-bar").click(function () {
            $('.filterpanel').animate({ left: 0 }, 1000);
            $('.filterpanel').show();
            $("#menu").hide();
        });

        $(".closebtnFilter").click(function () {
            $('.filterpanel').animate({ left: -400 },1000,function(){
                $('.filterpanel').hide();
            });
        });

        $('body').css("overflow", "visible", "background-attachment", "fixed");
        $('html').css("overflow", "visible");

      
    });
</script>


