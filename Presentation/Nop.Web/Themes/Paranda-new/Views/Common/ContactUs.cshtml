    <div class="container-fluid">
        <div class="row">
            <div class="container">
                <div class="row">
                    <div class="scrollRails activated register-main" data-component="ScrollRails">
                        <div class="scrollRails__rail row" id="right">
                            <div class="scrollRails__railContent col-md-6">
