                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="scrollRails__rail col-md-6" id="left">
                            <div class="scrollRails__railContent">
                                <div class="pageAbout__about">
                                    <div class="grid-x grid-padding-x">
                                        <div class="cell small-28 medium-20 xlarge-18 medium-offset-4 large-offset-4">
                                            <h1> Get in touch</h1>
                                            @*<p class="intro">
                                    Paranda is a venture by a young mother who was obsessed with the local craft since her childhood, during many of her visits to rural areas, she used to be awed by the array of locally crafted products by such talented artisans.
                                </p>*@
                                            <div class="pageAbout__body contact-holder">
                                                @Html.Action("TopicBlock", "Topic", new { systemName = "ContactUs" })
                                                @Html.Widget("contactus_top")
                                                @if (Model.SuccessfullySent)
                                                {
                                                    <div class="result">
                                                        @Model.Result
                                                    </div>
                                                }
                                                else
                                                {
                                                    using (Html.BeginForm())
                                                    {
                                                        @Html.AntiForgeryToken()
                                                        var validationSummary = Html.ValidationSummary(true);
                                                        if (!MvcHtmlString.IsNullOrEmpty(validationSummary))
                                                        {
                                                            <div class="message-error">@validationSummary</div>
                                                        }

                                                        <div class="fieldset">
                                                                <div class="form-fields">
                                                        @* , placeholder = T("ContactUs.FullName.Hint") *@
                                                                    <div class="inputs">
                                                                        @Html.LabelFor(model => model.FullName)
                                                                        @Html.TextBoxFor(model => model.FullName, new { @class = "fullname" })
                                                                        @Html.RequiredHint()
                                                                        @Html.ValidationMessageFor(model => model.FullName)
                                                                    </div>
                                                                    <div class="inputs">
                                                            @* , placeholder = T("ContactUs.Email.Hint") *@
                                                                        @Html.LabelFor(model => model.Email)
                                                                        @Html.TextBoxFor(model => model.Email, new { @class = "email" })
                                                                        @Html.RequiredHint()
                                                                        @Html.ValidationMessageFor(model => model.Email)
                                                                    </div>
                                                                    @if (Model.SubjectEnabled)
                                                                    {
                                                                        <div class="inputs">
                                                            @* , placeholder = T("ContactUs.Subject.Hint") *@
                                                                            @Html.LabelFor(model => model.Subject)
                                                                            @Html.TextBoxFor(model => model.Subject, new { @class = "subject" })
                                                                            @Html.RequiredHint()
                                                                            @Html.ValidationMessageFor(model => model.Subject)
                                                                        </div>
                                                                    }
                                                                    @Html.Partial("_ContactAttributes", Model.ContactAttributes)
                                                                    <div class="inputs">
                                                            @* , placeholder = T("ContactUs.Enquiry.Hint") *@
                                                                        @Html.LabelFor(model => model.Enquiry)
                                                                        @Html.TextAreaFor(model => model.Enquiry, new { @class = "enquiry" })
                                                                        @Html.ValidationMessageFor(model => model.Enquiry)
                                                                    </div>
                                                                    @if (Model.DisplayCaptcha)
                                                                    {
                                                                        <div class="captcha-box">
                                                                            @Html.Raw(Html.GenerateCaptcha())
                                                                        </div>
                                                                    }
                                                                    
                                                                </div>
                                                            </div>

                                                        

                                                        <div class="buttons">
                                                            <button type="submit" name="send-email" class="hollow button">SEND</button>
                                                        </div>
                                                    }
                                                }
                                                @Html.Widget("contactus_bottom")
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>