@model IList<CategoryModel>
@using growonline.Web.Models.Catalog;


<div >
    @if (Model.Count > 0)
    {

        <div class="row text-center">
            @foreach (var item in Model)
            {

                <div class=" col-xs-6 col-lg-4 cell-nopadding" style="max-height:400px; overflow:hidden">
                    <div style="position:absolute">
                        <h2>
                            <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title" style="display:inline-block;padding:10px 30px; text-transform:uppercase; letter-spacing:-3px; color:black; background-color:white" >
                                @item.Name
                            </a>
                        </h2>
                    </div>
                   
                    <div class="view second-effect">
                        <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                            <img src="@item.PictureModel.ImageUrl" class="img-responsive" style="width:100%" />
                        </a>
                     
                        <div class="mask">
                            <h2>
                                <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title" style="display:inline-block;padding:10px 30px; text-transform:uppercase; letter-spacing:-3px; color:black; background-color:white">
                                    @item.Name
                                </a>
                            </h2>
                        </div>
                    </div> 
                       
                       
                </div>
            }
        </div>
    }
</div>