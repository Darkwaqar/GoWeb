@model IList<ManufacturerModel>
@{
    Layout = "~/Views/Shared/_ColumnsTwo.cshtml";

    //title
    Html.AddTitleParts(T("PageTitle.Manufacturers").Text);
}
@using growonline.Web.Models.Catalog;
<div class="page-header page-header-custom">
    <h3>@T("Manufacturers.List")</h3>
</div>
<div class="row text-center">
    @foreach (var item in Model)
    {
        <div class="col-xs-4 col-sm-6 col-md-4">
            <div class="thumbnail">
               
                <a href="@Url.RouteUrl("Manufacturer", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                    <div class="manufacture-thumb" style="background-image: url(@item.PictureModel.ImageUrl)">

                    </div>
                   
                </a>
                <div class="caption">
                    <h4>
                        <a href="@Url.RouteUrl("Manufacturer", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                            @item.Name
                        </a>
                    </h4>
                </div>
            </div>
        </div>
    }
</div>

