@model Nop.Web.Models.Vendors.PublicProductReviewDisplayModel
@{
    var productReviews = Model.ProductReviews;
}
@if(!productReviews.Any()){
<div class="infobox red">You haven't reviewed any product yet</div>
}
else{
 foreach (var review in productReviews)
{
    <div class="product-review-block">

        <div class="col-md-12">
            <div class="col-md-2">
                <img width="75" src="@(review.ProductImageUrl)" />
            </div>
            <div class="col-md-10">
                <div class="title-review">
                    <a class="product-link" href="@Url.RouteUrl("Product", new {SeName = review.ProductSeName})">@review.ProductName</a>
                    <div class="rating-data"><div class="process-raty" data-readonly="true" data-score="@review.Rating"></div></div>
                </div>
                <div class="review-details">

                    <h3>@review.Title</h3>
                    <div class="review-date"> @review.CreatedOnUtc.ToString("dd MMMM yyyy")</div>
                    <p>@review.ReviewText</p>

                </div>

            </div>


        </div>

             
    </div>
}
}