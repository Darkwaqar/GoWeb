@model ShoppingCartModel.GiftCardBoxModel
@using Nop.Web.Models.ShoppingCart;
@if (Model.Display)
{
    <div class="coupon-box">
        <div class="title">
            <strong>Gift card</strong>
        </div>
        @*<div class="hint">@T("ShoppingCart.GiftCardCouponCode.Tooltip")</div>*@
        <div class="coupon-code">
            <label class="control-label" for="discountcouponcode">Enter Code</label>
            <input name="giftcardcouponcode" id="giftcardcouponcode" type="text" class="gift-card-coupon-code" />
            <input type="submit" name="applygiftcardcouponcode" id="applygiftcardcouponcode"
                   value="APPLY" class="btn btn-flow apply-gift-card-coupon-code-button" />
        </div>
        @if (!String.IsNullOrEmpty(Model.Message))
        {<div class="message">
            <div class="promocode-message @(Model.IsApplied ? "message-success" : "message-failure")">
                <p>@Model.Message</p>
</div>
        </div>
        }
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#giftcardcouponcode').keydown(function (event) {
                if (event.keyCode == 13) {
                    $('#applygiftcardcouponcode').click();
                    return false;
                }
            });
        });
    </script>
}
