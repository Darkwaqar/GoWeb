@using Nop.Core
@using Nop.Core.Infrastructure
@using Nop.Services.Localization
@using Nop.Services.Configuration
@using Nop.Web.Framework.Themes

@{
    var currentStore = EngineContext.Current.Resolve<IStoreContext>().CurrentStore;

    var isMenuMobile = EngineContext.Current.Resolve<ISettingService>().GetSettingByKey("urbanthemesettings.ismenumobile", false, currentStore.Id, true);
    var isHeaderInSlider = EngineContext.Current.Resolve<ISettingService>().GetSettingByKey("urbanthemesettings.IsHeaderInsideHomePageMainSlider", false, currentStore.Id, true);
    var headerClass = isMenuMobile ? "mobile" : "normal";
    var HeaderInSlider = isHeaderInSlider ? "becomeAbsolute" : "";
}

<div class="header @headerClass @HeaderInSlider">

    @Html.Action("HeaderLinks", "Common")
    
    @if (isMenuMobile)
    {
       @Html.Action("Logo", "Common")
    }

    <div class="header-menu-opener">@T("SevenSpikes.Themes.Urban.Menu.Title")</div>
</div>